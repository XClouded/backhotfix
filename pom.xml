	<build>
		<sourceDirectory>src</sourceDirectory>
		<finalName>600000@hotpatch</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.taobao.maven.plugins.android</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<version>1.0.3-SNAPSHOT</version>
				<configuration>
					<undeployBeforeDeploy>true</undeployBeforeDeploy>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>${project.build.Encoding}</encoding>
					<sdk>
						<path>${env.ANDROID_HOME}</path>
						<platform>${android.compile.apilevel}</platform>
					</sdk>
					<addJarResources>true</addJarResources>
					<secprocess>true</secprocess>
					<signOnline>true</signOnline>
					<buildAp>false</buildAp>
					<jarsign>
						<skip>true</skip>
						<archiveDirectory />
						<includes>
							<include>${project.build.directory}/${project.artifactId}.apk</include>
						</includes>
						<keystore>${sign.keystore}</keystore>
						<alias>${sign.alias}</alias>
						<storepass>${sign.storepass}</storepass>
						<verbose>false</verbose>
						<sigfile>TAOBAO</sigfile>
					</jarsign>
					<androidManifestFile>
						${project.basedir}/AndroidManifest.xml
					</androidManifestFile>
					<release>true</release>
				</configuration>
				<extensions>true</extensions>
			</plugin>

			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>2.1</version>
			</plugin>
